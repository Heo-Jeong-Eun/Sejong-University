<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bar_time_text">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#263c4d</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10.5dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="bar_day_text">
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#b6c5d1</item>
        <item name="android:textColor">#263c4d</item>
        <item name="android:textSize">11.5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
